{% extends 'master.twig' %}

{% block content %}

{% if record.image is not empty %}
<style>
	@media screen and (max-width: 4000px) {

		#wrapper > header {
			background-image: linear-gradient(to top, rgba(46, 49, 65, 0.6), rgba(46, 49, 65, 0.6)), url("{{ record.image }}");
		}
	}
</style>
{% endif %}

<header>
    <div class="inner">
        <h2><a href="/" title="Retour à la page d'accueil">{{ record.title }}</a></h2>
        <p>{{ record.teaser }}</p>
    </div>
</header>

<!-- Content -->
    <div class="wrapper">
        <div class="inner">

            {{ record.body }}
            {% if record.gallery is not empty %}
            <section class="features">
                {% for image in record.gallery %}
                    <article>
                        <a class="image" href="{{ image }}"><img src="{{ image|thumbnail(800, 800) }}" alt="" /></a>
                        <h3 class="major">{{ image.alt }}</h3>
                    </article>
                {% endfor %}
            </section>
            {% endif %}

            {% if record|related is not empty %}
            {% set related_page = record|related|first %}
	        <!-- Footer -->
       		<section class="features">
                	<div class="inner">
                        	<ul class="actions">
                                	<li><a href="/pages/{{ related_page.slug }}" class="button primary">Retour à la page {% if related_page.retour is not empty %}{{ related_page.retour }}{% else %}précédente{% endif %}</a></li>
	                        </ul>
        	                <ul class="contact">
                	                <li><a href="/" class="button primary">Retour à l'accueil</a></li>
                        	</ul>
	                </div>
        	</section>
            {% endif %}
        </div>
    </div>


{% endblock content %}
