{% extends 'master.twig' %}

{% block headerClass %}class="alt"{% endblock headerClass %}

{% block banner %}
<!-- Banner -->
    <section id="banner">
        <div class="inner">
            <div class="logo"><img class=icon alt="GSQ" src="/theme/gsq-theme-solid-state/images/logo.svg"/></span></div>
            <h2>This is Solid State</h2>
            <p>Another free + fully responsive site template by <a href="http://html5up.net">HTML5 UP</a></p>
        </div>
    </section>
{% endblock banner %}

{% block content %}

    {% setcontent lastThreePages = 'pages/latest/3' %}
    {% for page in lastThreePages %}

        {% if loop.first %}

        <!-- One -->
            <section id="one" class="wrapper spotlight style1">
                <div class="inner">
                    {% if page.image is not empty %}
                        {{ page.image|popup(276, 276, "r") }}
                    {% endif %}
                    <div class="content">
                        <h2 class="major">{{ page.title }}</h2>
                        <p>{{ page.teaser }}</p>
                        <a href="{{ page.link }}" class="special">Learn more</a>
                    </div>
                </div>
            </section>

        {% elseif loop.last %}

        <!-- Three -->
            <section id="three" class="wrapper spotlight style3">
                <div class="inner">
                    {% if page.image is not empty %}
                        {{ page.image|popup(276, 276, "r") }}
                    {% endif %}
                    <div class="content">
                        <h2 class="major">{{ page.title }}</h2>
                        <p>{{ page.teaser }}</p>
                        <a href="{{ page.link }}" class="special">Learn more</a>
                    </div>
                </div>
            </section>

        {% else %}

        <!-- Two -->
            <section id="two" class="wrapper alt spotlight style2">
                <div class="inner">
                    {% if page.image is not empty %}
                        {{ page.image|popup(276, 276, "r") }}
                    {% endif %}
                    <div class="content">
                        <h2 class="major">{{ page.title }}</h2>
                        <p>{{ page.teaser }}</p>
                        <a href="{{ page.link }}" class="special">Learn more</a>
                    </div>
                </div>
            </section>

        {% endif %}

    {% endfor %}

    {% setcontent news = 'entries/latest/4' %}
    <!-- Four -->
        <section id="four" class="wrapper alt style1">
            <div class="inner">
                <h2 class="major">Les autres actions du club</h2>
                <p>D'autres actions réalisées par les membres du club:</p>
                <section class="features">

                    {% for item in news %}
                        <article>
                            <a class="image"><img src="{{ item.image|thumbnail(572, 333, "c") }}" alt="" /></a>
                            <h3 class="major">{{ item.title }}</h3>
                            <p>{{ item.teaser }}</p>
                            <a href="{{ item.link }}" class="special">Learn more</a>
                        </article>
                    {% endfor %}

                </section>
                <ul class="actions">
                    <li><a href="{{ paths.root }}pages" class="button">Tout voir</a></li>
                </ul>
            </div>
        </section>


{% endblock content %}
