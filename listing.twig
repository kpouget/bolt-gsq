{% extends 'master.twig' %}

{% block content %}

    <header>
        <div class="inner">
            <h2>Toutes les publications</h2>
            <p></p>
        </div>
    </header>

    <!-- Content -->
        <div class="wrapper">
            <div class="inner">

                {% setcontent pages = 'pages' %}

                <section class="features">

                    {% for page in pages %}
                        <article>
                          {% if page.image is not empty %}
                            <a class="image"><img src="{{ page.image }}" alt="" /></a>
                          {% endif %}
                            <h3 class="major">{{ page.title }}</h3>
                            <p>{{ page.teaser|excerpt(100) }}</p>
                            <a href="{{ page|link }}" class="special">Par ici</a>
                        </article>

                    {% endfor %}

                </section>
                {{ pager() }}
            </div>
        </div>

{% endblock content %}
